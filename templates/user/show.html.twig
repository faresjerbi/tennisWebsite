{% extends 'base-back.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <h1>User</h1>

        <table>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ user.prenom }}</td>
                </tr>
                <tr>
                    <th>Mail</th>
                    <td>{{ user.mail }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>{{ user.genre }}</td>
                </tr>
                <tr>
                    <th>Date de Naissance</th>
                    <td>{{ user.date_de_naissance ? user.date_de_naissance|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>{{ user.role }}</td>
                </tr>
                <tr>
                    <th>Niveau</th>
                    <td>{{ user.niveau }}</td>
                </tr>
                <tr>
                    <th>Disponibilite</th>
                    <td>{{ user.disponibilite }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ user.img }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_user_index') }}" class="btn btn-primary">Back to list</a> {# Bouton "Back to list" en bleu #}

        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-success">Edit</a> {# Bouton "Edit" en vert #}

        <a href="{{ path('app_user_delete', {'id': user.id}) }}" class="btn btn-danger">Delete</a> {# Bouton "Delete" en rouge #}
        
    </div>
{% endblock %}
