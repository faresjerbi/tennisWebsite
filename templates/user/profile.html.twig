{% extends isBackTemplate ? 'base-back.html.twig' : 'base-front.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="profile-avatar">
                                    <img src="{{ asset('images/' ~ user.img) }}" alt="Profile Picture" class="img-fluid rounded-circle">
                                </div>
                            </div>
                            <div class="col-md-9">
                                <h2 class="mb-0">{{ user.nom }} {{ user.prenom }}</h2>
                                <p class="text-muted mb-3">{{ user.email }}</p>
                                <p>{{ user.DateDeNaissance ? user.DateDeNaissance|date('Y-m-d') : '' }}</p>
                                <p>{{ user.genre }}</p>
                                <p>Niveau: {{ user.niveau }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Actions</h4>
                                <ul class="list-unstyled">
                                    <a href="{{ isBackTemplate ? path('app_edit_profile_admin') : path('app_edit_profile') }}" class="btn btn-primary">Modifier les informations</a>
                                    <a href="{{ isBackTemplate ? path('reset_password_profil_admin') : path('reset_password_profil') }}" class="btn btn-primary">Modifier le mot de passe</a>
                                    <li><a href="{{ path('app_logout') }}" class="btn btn-danger">Se d√©connecter</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
