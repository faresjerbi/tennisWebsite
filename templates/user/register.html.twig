{% extends 'base-front.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title bg-white text-center text-primary px-3">Inscription</h6>
                <h1 class="mb-5">S'inscrire maintenant</h1>
            </div>
            <div class="row g-4">
                {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}
                <div class="form-errors"></div>
                <div class="form-group">
                    {{ form_label(form.nom, 'Nom') }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.prenom, 'Prénom') }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email, 'Mail') }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password, 'Mot de passe') }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.password) %}
                        <div class="alert alert-danger">{{ form_errors(form.password) }}</div>
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form_label(form.genre, 'Genre') }}
                    {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.genre) %}
                        <div class="alert alert-danger">{{ form_errors(form.genre) }}</div>
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form_label(form.date_de_naissance, 'Date de naissance') }}
                    {{ form_widget(form.date_de_naissance, {'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.date_de_naissance) %}
                        <div class="alert alert-danger">{{ form_errors(form.date_de_naissance) }}</div>
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form_row(form.roles, {'label': 'Rôle', 'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.roles) %}
                        <div class="alert alert-danger">{{ form_errors(form.roles) }}</div>
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form_label(form.niveau, 'Niveau') }}
                    {{ form_widget(form.niveau, {'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.niveau) %}
                        <div class="alert alert-danger">{{ form_errors(form.niveau) }}</div>
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form_label(form.disponibilite, 'Disponibilité') }}
                    {{ form_widget(form.disponibilite, {'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.disponibilite) %}
                        <div class="alert alert-danger">{{ form_errors(form.disponibilite) }}</div>
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form_label(form.img, 'Image') }}
                    {{ form_widget(form.img, {'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.img) %}
                        <div class="alert alert-danger">{{ form_errors(form.img) }}</div>
                    {% endif %}
                    <button class="btn btn-lg btn-primary">{{ button_label|default('S\'inscrire') }}</button>
                    {{ form_end(form) }}
                </div>
                
                <br>
                <br>
               
                <br>
            </div>
        </div>
    </div>
{% endblock %}
