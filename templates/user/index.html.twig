{% extends 'base-back.html.twig' %}

{% block title %}User list{% endblock %}

{% block body %}
<div class="container-fluid">
 
    <h1>User list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Mail</th>
                <th style="max-width: 150px;">Password</th>
                <th>genre</th>
                <th>Date de naissance</th>
                <th>role</th>
                <th>niveau</th>
                <th>disponibilite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.genre }}</td>
                <td>{{ user.date_de_naissance ? user.date_de_naissance|date('Y-m-d') : '' }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.niveau }}</td>
                <td>{{ user.disponibilite }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}" class="btn btn-primary"">Create new</a>
</div>
{% endblock %}
